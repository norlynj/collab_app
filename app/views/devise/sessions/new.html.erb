<section class="py-4 py-md-5 my-5">
  <div class="container py-md-5">
    <div class="row">
      <div class="col-md-6 text-center">
        <%= image_tag("illustrations/login.svg", class: "img-fluid w-100", width: 476, height: 359) %>
      </div>
      <div class="col-md-5 col-xl-4 text-center text-md-start">
        <h2 class="display-6 fw-bold mb-5">
          <span class="underline pb-1">
            <strong>Login</strong><br />
          </span>
        </h2>
        <%= form_with(model: resource, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.email_field :email, class: "shadow form-control", placeholder: "Email" %>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, class: "shadow form-control", placeholder: "Password" %>
          </div>
          <div class="mb-5">
            <%= f.submit "Log in", class: "btn btn-primary shadow" %>
          </div>
        <% end %>
        <p class="text-muted"></p>
      </div>
    </div>
  </div>
  <h1 style="text-align: center;padding-bottom: 0px;margin-bottom: 0px;">Hop in and get started!</h1>
</section>
<%= render "devise/shared/links" %>